doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        style(type='text/css').
            :root {
                font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
                    Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
            }
            h1 {
                text-align: center;
                max-width: 750px;
                width: 100%;
                margin: 0 auto;
                margin-bottom: 1rem;
            }
            .item {
                max-width: 750px;
                width: 100%;
                display: flex;
                gap: 1rem;
                margin: 0 auto;
                background: #eee;
                margin-bottom: 1rem;
            }
            .item-name, .detail-cta {
                background: black;
                color: white;
                padding: 1rem;
            }
            .item-details {
                flex: 1;
                display: flex;
                align-items: center;
                justify-content: flex-end;
                gap: 1.5rem;
            }
            .item-location, .item-price {
                font-weight: bold;
            }
            .detail-cta {
                background: #0009;
            }
        title Food List
    body 
        h1 Menu
        each item in foodItems
            .item
                .item-name #{item.foodName}
                .item-details
                    span.item-location #{item.location}
                    span.item-quantity #{item.quantity} ml 
                    span.item-price Rs #{item.price}
                .detail-cta Detail